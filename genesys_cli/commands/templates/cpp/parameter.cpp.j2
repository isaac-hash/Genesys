#include <rclcpp/rclcpp.hpp>
#include <std_msgs/msg/string.hpp>
#include <string>

class {{ class_name }} : public rclcpp::Node
{
public:
    {{ class_name }}()
        : Node("{{ node_name }}")
    {
        // Declare parameter
        declare_parameter("my_message", "Hello from parameter node!");
        my_message_ = get_parameter("my_message").as_string();

        // Create timer to periodically print the parameter value
        timer_ = create_wall_timer(
            std::chrono::milliseconds(2000),
            std::bind(&{{ class_name }}::on_timer, this)
        );

        RCLCPP_INFO(get_logger(), "{{ class_name }} node started");
    }

private:
    void on_timer()
    {
        // Update parameter value from ROS parameter
        my_message_ = get_parameter("my_message").as_string();
        RCLCPP_INFO(get_logger(), "Current message: '%s'", my_message_.c_str());
    }

    rclcpp::TimerBase::SharedPtr timer_;
    std::string my_message_;
};

int main(int argc, char * argv[])
{
    rclcpp::init(argc, argv);
    rclcpp::spin(std::make_shared<{{ class_name }}>());
    rclcpp::shutdown();
    return 0;
}}
