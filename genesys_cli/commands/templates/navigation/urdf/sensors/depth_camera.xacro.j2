<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="depth_camera_sensor">
        <link name="depth_camera_link">
            <visual>
                <geometry>
                    <box size="0.03 0.09 0.025"/>
                </geometry>
                <material name="camera_gray">
                    <color rgba="0.3 0.3 0.3 1.0"/>
                </material>
            </visual>
        </link>

        <joint name="depth_camera_joint" type="fixed">
            <parent link="base_link"/>
            <child link="depth_camera_link"/>
            <origin xyz="0.15 0 0.1" rpy="0 0 0"/> <!-- Front of robot -->
        </joint>

        <!-- Optical frame (required for camera convention) -->
        <link name="depth_camera_optical_frame"/>

        <joint name="depth_camera_optical_joint" type="fixed">
            <parent link="depth_camera_link"/>
            <child link="depth_camera_optical_frame"/>
            <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
        </joint>

        {% if config.simulation %}
        <gazebo reference="depth_camera_link">
            <sensor name="depth_camera" type="depth">
                <always_on>true</always_on>
                <visualize>true</visualize>
                <update_rate>30</update_rate>
                <camera>
                    <horizontal_fov>1.047198</horizontal_fov> <!-- 60 degrees -->
                    <image>
                        <width>640</width>
                        <height>480</height>
                        <format>R8G8B8</format>
                    </image>
                    <clip>
                        <near>0.05</near>
                        <far>10.0</far>
                    </clip>
                    <noise>
                        <type>gaussian</type>
                        <mean>0.0</mean>
                        <stddev>0.007</stddev>
                    </noise>
                </camera>
                <plugin name="depth_camera_controller" filename="libgazebo_ros_camera.so">
                    <ros>
                        <namespace>/depth_camera</namespace>
                        <remapping>image_raw:=image_raw</remapping>
                        <remapping>depth/image_raw:=depth/image_raw</remapping>
                        <remapping>camera_info:=camera_info</remapping>
                        <remapping>depth/camera_info:=depth/camera_info</remapping>
                        <remapping>points:=points</remapping>
                    </ros>
                    <frame_name>depth_camera_optical_frame</frame_name>
                    <min_depth>0.05</min_depth>
                    <max_depth>10.0</max_depth>
                </plugin>
            </sensor>
        </gazebo>
        {% endif %}
    </xacro:macro>
</robot>
