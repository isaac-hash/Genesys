
amcl:
  ros__parameters:
    use_sim_time: {{ use_sim_time }}

    alpha1: 0.2
    alpha2: 0.2
    alpha3: 0.2
    alpha4: 0.2
    alpha5: 0.2
    base_frame_id: "base_link"
    global_frame_id: "map"
    odom_frame_id: "odom"
    scan_topic: "/scan"
    {% if config.drive_type.value == 'omni' %}
    robot_model_type: "nav2_amcl::OmnidirectionalMotionModel"
    {% else %}
    robot_model_type: "nav2_amcl::DifferentialMotionModel"
    {% endif %}
    transform_tolerance: 1.0
    # ... (other AMCL defaults from sam_bot/nav2_bringup)

bt_navigator:
  ros__parameters:
    use_sim_time: {{ use_sim_time }}
    global_frame: map
    robot_base_frame: base_link
    odom_topic: /odom
    default_bt_xml_filename: "navigate_w_replanning_and_recovery.xml"  {# Or custom #}
    # ... recoveries, etc.

controller_server:
  ros__parameters:
    use_sim_time: {{ use_sim_time }}

    controller_frequency: 20.0
    min_x_velocity_threshold: 0.001
    min_theta_velocity_threshold: 0.001

    FollowPath:
      plugin: "{{ controller_plugin }}"
      desired_linear_vel: {{ config.params.max_linear_velocity }}
      max_angular_vel: {{ config.params.max_angular_velocity }}
      transform_tolerance: 0.1
      regulate_curvature: true
      # ... additional RPP params (lookahead_dist, etc.)

    footprint: "{{ footprint }}"

local_costmap:
  local_costmap:
    ros__parameters:
      use_sim_time: {{ use_sim_time }}
      global_frame: odom
      robot_base_frame: base_link
      update_frequency: 5.0
      publish_frequency: 2.0
      rolling_window: true
      width: 3
      height: 3
      resolution: 0.05
      footprint: "{{ footprint }}"
      plugins: ["obstacle_layer", "inflation_layer"]
      obstacle_layer:
        plugin: "nav2_costmap_2d::ObstacleLayer"
        observation_sources: scan
        scan:
          topic: /scan
          max_obstacle_height: 2.0
          clearing: true
          marking: true
          data_type: "LaserScan"
      inflation_layer:
        plugin: "nav2_costmap_2d::InflationLayer"
        inflation_radius: 0.55
        cost_scaling_factor: 3.0

global_costmap:
  global_costmap:
    ros__parameters:
      use_sim_time: {{ use_sim_time }}
      global_frame: map
      robot_base_frame: base_link
      update_frequency: 1.0
      publish_frequency: 1.0
      resolution: 0.05
      footprint: "{{ footprint }}"
      plugins: ["static_layer", "obstacle_layer", "inflation_layer"]
      # Similar obstacle_layer config as local
      # ...

planner_server:
  ros__parameters:
    use_sim_time: {{ use_sim_time }}
    planner_plugins: ["GridBased"]
    GridBased:
      plugin: "{{ planner_plugin }}"
      tolerance: 0.3
      downsample_costmap: false
      allow_unknown: true
      max_iterations: 1000000
      smoother:
        plugin: "nav2_smoother::SimpleSmoother"

# Additional nodes if needed (e.g., map_server, lifecycle_manager)
