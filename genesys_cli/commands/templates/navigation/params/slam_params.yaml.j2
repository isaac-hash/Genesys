# SLAM Toolbox Parameters for {{ config.robot_name }}
slam_toolbox:
  ros__parameters:
    # Plugin params
    solver_plugin: solver_plugins::CeresSolver
    ceres_linear_solver_type: SCHUR_JACOBI
    ceres_linear_solver_threads: 1
    ceres_threads: 4
    ceres_dogleg_type: TRADITIONAL_DOGLEG
    ceres_loss_function: HuberLoss

    # ROS Parameters
    odom_frame: {{ config.frames.odom }}
    map_frame: {{ config.frames.map }}
    base_frame: {{ config.frames.base_link }}
    scan_topic: {{ config.frames.scan_topic }}
    use_sim_time: {{ use_sim_time }}
    use_map_saver: true
    mode: mapping #localization

    # if you'd like to immediately start continuing a map at a given pose
    # or at the dock, but they are mutually exclusive, if both are set
    # will start at the origin
    # map_start_pose: [0.0, 0.0, 0.0]
    # dock_pose: [-0.5, 0.0, 0.0]

    debug_logging: false
    throttle_scans: 1
    transform_publish_period: 0.02 #default: 0.02
    map_update_interval: 5.0
    resolution: 0.05
    minimum_laser_range: 0.12
    max_laser_range: 3.5
    minimum_time_interval: 0.5
    transform_timeout: 0.2
    tf_buffer_duration: 30.

    enable_interactive_mode: true

    # General Parameters
    use_scan_matching: true
    use_loop_closure: true
    auto_loop_closure: true
    loop_search_maximum_distance: 3.0
    do_loop_closure_on_load: false
    async_loop_closure: true
    adjustment: Core2D
    pattern_width: 7
    pattern_height: 7
    outlier_outlier_threshold: 5.0
    outlier_particle_threshold: 2
    outlier_pass_through_threshold: 10
    outlier_activated_max: 5

    correlation_search_space_dimension: 0.5
    correlation_search_space_resolution: 0.01
    correlation_search_space_smear_deviation: 0.1

    loop_search_space_dimension: 8.0
    loop_search_space_resolution: 0.05
    loop_search_space_smear_deviation: 0.03

    distance_variance_penalty: 0.5
    angle_variance_penalty: 1.0

    fine_search_angle_offset: 0.00349066
    coarse_search_angle_offset: 0.349066
    coarse_angle_resolution: 0.0349066
    minimum_angle_penalty: 0.9
    minimum_distance_penalty: 0.5
    use_response_expansion: true
